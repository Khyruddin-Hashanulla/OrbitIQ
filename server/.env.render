# Render Environment Variables for OrbitIQ
# Set these in your Render dashboard under Environment Variables

# Database - MongoDB Atlas Connection String
# Format: mongodb+srv://<username>:<password>@<cluster-url>/<database>?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://your-username:your-password@cluster0.xxxxx.mongodb.net/orbitiq?retryWrites=true&w=majority

# Server Configuration
NODE_ENV=production
PORT=10000

# API Keys (Get from respective providers)
NASA_API_KEY=your_nasa_api_key_here
N2YO_API_KEY=your_n2yo_api_key_here
NEWS_API_KEY=your_news_api_key_here
SPACEX_API_URL=https://api.spacexdata.com/v5

# Security
JWT_SECRET=your_super_secure_jwt_secret_minimum_32_characters_long
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS (Frontend URL)
CORS_ORIGIN=https://orbitiq-frontend.onrender.com
